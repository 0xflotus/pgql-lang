module syntax

language pgql-lang

test Case insensitivity [[
sElEcT mAx(n.age), MiN(n.age), sUm(n.age)
WhErE
  (n), TrUe Or FaLsE And n.married
gRoUp By n.name
OrDeR bY AvG(n.age)
lImIt 1
]]

test Edges [[
SELECT *
WHERE
  (n) -> () --> () -[e1]-> () -[e2 WITH label = 'Knows']-> (),
  (n) <- () <-- () <-[e3]- () <-[e4 WITH label = 'Knows']- ()
]]

