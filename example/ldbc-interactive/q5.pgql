MATCH
  {
    MATCH
      (person:Person@12345)-[:KNOWS]{1..2}-(friend:Person)
      person != friend
    SELECT DISTINCT friend
  }
  friend <-[membership:HAS_MEMBER WITH ~joinDate > '2012-01-01'^^date]- (forum:Forum)
  friend <-[:HAS_CREATOR]-(post:Post)<-[:CONTAINER_OF]- (forum)
SELECT forum.title, COUNT(post)
GROUP BY forum
ORDER BY DESC(COUNT(post)), ASC(forum.id)
LIMIT 10